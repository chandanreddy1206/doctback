<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:paddingTop="5dip"
    android:paddingBottom="5dip"
    android:layout_marginLeft="20dip">

    <ImageButton
        android:id="@+id/chat_voice_user_msg_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/chat_voice_user_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chat_voice_user_msg_play"
        android:layout_alignParentRight="true"
        android:text="date" />

    <SeekBar
        android:id="@+id/chat_voice_user_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dip"
        android:layout_alignTop="@+id/chat_voice_user_msg_play" />
</RelativeLayout>