<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<TextView 
    android:id="@+id/doctor_approve_appointment_details"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text="Confirm"
    android:layout_alignParentLeft="true"/>

<TextView
    android:id="@+id/doctor_approve_appointment_confirmed"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/doctor_approve_appointment_details" />
  
<Button 
    android:id="@+id/doctor_approve_appointment_approve_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"/>
</RelativeLayout>
