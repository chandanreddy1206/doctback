<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".ChatActivity$VoiceChatFragment" >

    <!-- <ListView android:layout_width="fill_parent" -->
    <!-- android:layout_height="fill_parent" -->
    <!-- android:id="@+id/chat_voice_list_view"> -->
    <!-- </ListView> -->

  

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/chat_voice_location"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="HYD"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/chat_voice_gender"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/chat_voice_age"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="21"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/chat_voice_doctor_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/chat_voice_gp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="GP" />

        <RadioButton
            android:id="@+id/chat_voice_expert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expert" />
    </RadioGroup>

    <GridView
        android:id="@+id/chat_voice_doctor_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3" >
    </GridView>

</LinearLayout>